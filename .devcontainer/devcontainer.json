{
  "name": "@beandao/Governance",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      // Update 'VARIANT' to pick a Node version: 18, 16, 14.
      // Append -bullseye or -buster to pin to an OS version.
      // Use -bullseye variants on local on arm64/Apple Silicon.
      "VARIANT": "16-bullseye"
    }
  },
  "runArgs": ["--init", "--dns", "1.1.1.1", "--privileged"],
  "mounts": [
    "source=dind-var-lib-docker,target=/var/lib/docker,type=volume",
    "source=vwaponchain-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
  ],

  // Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "node",
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/node/.local/bin:/home/node/.foundry/bin",
    "SOLC_VERSION": "0.8.17",
    "MAINNET_RPC_URL": "https://eth-mainnet.g.alchemy.com/v2/0Z_0t1F-b8Ke8275uw-1Z7AfhE_JWAhC"
  },

  // Set *default* container specific settings.json values on container create.
  "settings": {
    "solidity.packageDefaultDependenciesContractsDirectory": "contracts",
    "solidity.remappings": [
      "@beandao/=node_modules/@beandao",
      "@openzeppelin/=node_modules/@openzeppelin/",
      "@uniswap/=node_modules/@uniswap/",
      "base64-sol/=node_modules/base64-sol/",
      "hardhat/=node_modules/hardhat/",
      "forge-std/=lib/forge-std/src/",
      "hardhat/=node_modules/hardhat/",
      "UniswapV3Pack/=lib/UniswapV3Pack/src/"
    ],
    "solidity.linter": "solhint",
    "solidity.formatter": "prettier",
    "solidity.compileUsingRemoteVersion": "0.8.17",
    "solidity.enableLocalNodeCompiler": false,
    "search.exclude": { "lib": true },
    "git.ignoreLimitWarning": true,
    "editor.rulers": [120],
    "workbench.colorCustomizations": {
      "editorRuler.foreground": "#ff408042"
    },
    "editor.formatOnSave": true,
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[solidity]": {
      "editor.defaultFormatter": "JuanBlanco.solidity"
    },
    "files.associations": {
      "*.yul": "solidity",
      "*.yulp": "solidity"
    },
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },

  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "ms-azuretools.vscode-docker",
    "dbaeumer.vscode-eslint",
    "tintinweb.graphviz-interactive-preview",
    "esbenp.prettier-vscode",
    "JuanBlanco.solidity",
    "tintinweb.solidity-visual-auditor",
    "ms-vscode.vscode-typescript-tslint-plugin",
    "github.vscode-pull-request-github",
    "styled-components.vscode-styled-components"
  ],

  "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
  "postCreateCommand": "zsh ./.devcontainer/postCreateCommand.sh"
}
